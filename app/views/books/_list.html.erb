<h1>User info</h1>
<% if user.image.attached? %>
    <%= image_tag user.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
  <table>
    <tbody>
      <tr>
        <td>name</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>


<%= link_to "edit", edit_user_path(user.id),class: "btn btn-secondary" %>

<h1>new Book</h1>

<%= form_with model: book, url:'/books', method: :post do |f|%>
  <h4>Title</h4>
  <%= f.text_field :title%>
  
  <h4>Opinion</h4>
  <%= f.text_area :body%>
  
  <%= f.submit 'Create Book'%>
<% end %>