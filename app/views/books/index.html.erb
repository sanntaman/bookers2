<div class= "container">
  <div class= "row">
    <div class="col-md-3"><%= render 'books/list', book: @book,user: @user%></div>
    <div class="col-md-8 offset-md-1"><h1>Books</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Titile</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% @books.each do |book|%>
    <tr>
      <td>
        <%= link_to  user_path(book.user) do %>
          <% if @user.image.attached? %>
            <%= image_tag user.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
            
          <% end %>
        <% end %>
      </td>
      <td>
        <%= link_to  book_path(book.id) do %>
        <%= book.title %>
        <%end%>
      </td>
      <td><%= book.body %></td>
      <td><%= link_to 'edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
<%end%>
  </tbody>
</table>
</div>
    </div>
  </div>
</div>




