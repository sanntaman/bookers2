<div class= "container">
  <div class= "row">
    <div class="col-md-3"><%= render 'books/list', book: @book_new,user: @user%></div>
    <div class="col-md-8 offset-md-1"><h2>Book detail</h2>

<table class="table">
  <tr>
      <td>
        <%= link_to  user_path(@book.user) do %>
          <% if @user.image.attached? %>
            <%= image_tag user.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %><br>
          <%= @book.user.name %>
        <% end %>
        
      </td>
      <td>
         <%= link_to @book.title, book_path(@book.id) %>
          
      </td>
      <td>
         <%= @book.body %>
      </td>
        <% if @book.user == current_user %>
      <td><%= link_to 'edit', edit_book_path(@book.id) %></td>
      <td>
          <%= link_to "	Destroy", book_path(@book), method: :delete %>
      </td>
        <% end %>
  </tr>
</table></div>
  </div>
</div>




